
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h4 style="color:red; text-align: center">@ViewBag.ThongBao</h4>
<table align="center">
    <h3 style="text-align: center">ĐĂNG NHẬP</h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:50px;font-size:18px">
            <td style="">Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:50px;font-size:18px">
            <td align="right">Mật khẩu: </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px;font-size:15px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
        <tr style="height:40px;font-size:15px">
            <td></td>
            <td>
                <a href="/nguoidung/dangky">Bạn có muốn tạo tài khoản không ?</a>
            </td>
        </tr>
    }
</table>

